{
  "name": "spin-bot",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:server\" \"npm:dev:client\"",
    "dev:client": "npm --workspace client run dev",
    "dev:server": "npm --workspace server run dev",
    "build": "npm run build --workspace client",
    "lint": "npm run lint --workspace client"
  },
  "devDependencies": {
    "concurrently": "^9.0.1"
  }
}
